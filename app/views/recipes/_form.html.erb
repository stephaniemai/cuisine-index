<%= simple_form_for(@recipe) do |f| %>
  <%= f.input :name, label: 'Nom' %>
  <%= f.input :origin, label: 'Origine' %>
  <%= f.input :category, label: 'Catégorie' %>
  <%= f.input :cooked, label: 'Cuisiné',  as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.input :note, label: 'Note', collection: 1..3, as: :radio_buttons %>
  <%= f.input :comment, label: 'Commentaire' %>
  <%= f.button :submit, "Créer la recette", class: 'btn btn-primary' %>
<% end %>
